% Encoding of Ising model to test program transformation.

type(bool, [t, f]).
outcomes(edge, [bool,bool]).

set_sw(edge, [0.49, 0.01, 0.01, 0.49]).

ising(E11, E21, E31, E41) :-
    msw(edge, 1, [E11,E12]),
    msw(edge, 2, [E21,E22]),
    msw(edge, 3, [E31,E32]),
    msw(edge, 4, [E41,E42]),
    {E12=E21},
    {E22=E32},
    {E32=E41},
    {E42=E11}.

query :-
    ising(A, B, C, D),
    {A=t}, {B=t}, {C=t}, {D=t}.

evidence :-
    ising(A, B, C, D).


