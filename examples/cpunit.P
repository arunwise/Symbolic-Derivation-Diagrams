%% simple unit tests for constraint processing code.
intrange(alpha, 1, 3).

%% testcases for satisfiability/1 predicate
test1 :-
    satisfiable([]).

% not satisfiable
test2 :-
    satisfiable([X=1,X\=1]).

test3 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    satisfiable([X=Y]).

test4 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    satisfiable([X\=Y]).

test5 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    set_id(Z, (alpha, 3)),
    satisfiable([X=Y,X=Z]).

test6 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    set_id(Z, (alpha, 3)),
    satisfiable([X\=Y,X\=Z]).

test7 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    set_id(Z, (alpha, 3)),
    satisfiable([X\=Y,X\=Z,Y\=Z]).

% unsatisfiable
test8 :-
    set_id(X, (alpha, 1)),
    set_id(Y, (alpha, 2)),
    set_id(Z, (alpha, 3)),
    set_id(W, (alpha, 4)),
    satisfiable([X\=Y,X\=Z,Y\=Z,W\=X,W\=Y,W\=Z]).

